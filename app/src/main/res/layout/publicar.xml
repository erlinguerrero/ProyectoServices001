<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.erlin.proyectoservices001.Publicar">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Describe tu aviso"
        android:id="@+id/Btn2Avi"
        android:drawableRight="@drawable/abc_btn_radio_material"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09"
        android:layout_above="@+id/Btn3Avi"
        android:layout_alignParentRight="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agrega tu informacion"
        android:id="@+id/Btn3Avi"
        android:drawableRight="@drawable/abc_btn_radio_material"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:layout_marginBottom="56dp"
        android:layout_above="@+id/Btn4Avi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona una categoria"
        android:id="@+id/Btn1Avi"
        android:drawableRight="@drawable/abc_btn_radio_material"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:layout_above="@+id/Btn2Avi"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Publicar ahora"
        android:id="@+id/Btn4Avi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#ffff5800" />

</RelativeLayout>
