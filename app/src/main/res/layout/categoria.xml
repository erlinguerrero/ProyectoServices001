<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.erlin.lateral01.ProfileFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicios "
        android:id="@+id/Btn1"
        android:drawableLeft="@mipmap/ic_servicio"
        android:drawablePadding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:background="@drawable/abc_cab_background_top_mtrl_alpha" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_terreno"
        android:drawablePadding="10dp"
        android:text="Terrenos"
        android:id="@+id/Btn2"
        android:gravity="fill_horizontal|center_vertical"
        android:layout_below="@+id/Btn1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Btn1"
        android:background="@drawable/abc_cab_background_top_mtrl_alpha" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuartos"
        android:drawableLeft="@mipmap/ic_cuartos"
        android:drawablePadding="10dp"
        android:id="@+id/Btn3"
        android:gravity="fill_horizontal|center_vertical"
        android:layout_below="@+id/Btn2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Btn2"
        android:background="@drawable/abc_cab_background_top_mtrl_alpha" />
</RelativeLayout>
