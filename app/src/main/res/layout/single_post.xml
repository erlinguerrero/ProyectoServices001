<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/single_post_tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="2dip"
        android:padding="10dp"
        android:textColor="#333"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="nombre" />

    <TextView
        android:id="@+id/single_post_tv_servicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="2dip"
        android:padding="10dp"
        android:textColor="#333"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="servicio"
        android:layout_below="@+id/single_post_tv_direccion"
        android:layout_toRightOf="@+id/single_post_tv_id"
        android:layout_toEndOf="@+id/single_post_tv_id" />

    <TextView
        android:id="@+id/single_post_tv_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="2dip"
        android:padding="10dp"
        android:textColor="#333"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="direccion"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/single_post_tv_nombre"
        android:layout_toEndOf="@+id/single_post_tv_nombre" />

    <TextView
        android:id="@+id/single_post_tv_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="2dip"
        android:padding="10dp"
        android:textColor="#333"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="telefono"
        android:layout_above="@+id/single_post_tv_servicio"
        android:layout_toRightOf="@+id/single_post_tv_direccion"
        android:layout_toEndOf="@+id/single_post_tv_direccion" />

    <TextView
        android:id="@+id/single_post_tv_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="2dip"
        android:padding="10dp"
        android:textColor="#333"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="precio"
        android:layout_below="@+id/single_post_tv_id"
        android:layout_toRightOf="@+id/single_post_tv_telefono"
        android:layout_toEndOf="@+id/single_post_tv_telefono" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="id"
        android:id="@+id/single_post_tv_id"
        android:visibility="gone" />


</RelativeLayout>